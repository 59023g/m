font = "ProximaNova", Arial, Sans-Serif
font-color = #333
blue = #0087ff
orange = #f99e02
green = #A8E653
radius = 3px

//FONT 
@font-face
	font-family 'ProximaNova'
	src url('http://www.mozio.com/css/fonts/proxima_nova/ProximaNova-Reg-webfont.eot');
	src url('http://www.mozio.com/css/fonts/proxima_nova/ProximaNova-Reg-webfont.eot?#iefix') format('embedded-opentype'), url('http://www.mozio.com/css/fonts/proxima_nova/ProximaNova-Reg-webfont.woff') format('woff'), url('http://www.mozio.com/css/fonts/proxima_nova/ProximaNova-Reg-webfont.ttf') format('truetype'), url('http://www.mozio.com/css/fonts/proxima_nova/ProximaNova-Reg-webfont.svg#ProximaNovaRgRegular') format('svg');
	font-weight normal
	font-style normal

body
	padding-top 0px
	padding-bottom 20px
	font-family font
html
	overflow-x hidden
	-webkit-tap-highlight-color rgba(0,0,0,0)
	
a
	transition color .5s ease 
	&:hover 
		text-decoration none 
 		transition color .5s ease 	
.header,
.marketing,
.footer
	padding-left 15px
	padding-right 15px

.header
	margin-bottom 30px
	h3
		margin-top 0
		margin-bottom 0
		line-height 40px
		padding-bottom 19px
	
.footer
	padding-top 19px
	color #777
	border-top 1px solid white 

// Navbar
.logo
	width 100px
	padding-bottom 20px
	
// Header/Above Fold
#header 
	//background-color darkorange
	background-image radial-gradient(at 0% bottom,rgba(255,140,0,0.9) 0%,rgba(255,140,0,0.5) 75%),radial-gradient(at right top,rgba(255,140,0,0.8) 0%,rgba(255,140,0,0.2) 57%)
	z-index -99
	padding-top 40px
	color white
	//background url('http://farm3.static.flickr.com/2634/4055095614_e9b1ac206d_b.jpg')
	background-size cover
	background-attachment fixed
	h1, h2, h3
		-webkit-font-smoothing antialiased
		margin-top 10px
	.hero
		text-align center
		margin-bottom 20px
		padding-top 2%
		.copy
			margin-bottom 36px
	.photo-credit 
		a
			font-size 12px
			position absolute
			bottom 5px
			right 15px
			color rgba(255, 255, 255, .3) 
		
.arrow
	img 
		-webkit-animation fadein 1s ease forwards
		-moz-animation fadein 1s ease
		-ms-animation fadein 1s ease
		-webkit-animation-delay 4s
		position absolute
		bottom 50px
		width 26px
		height auto
		left 50%
		margin-left -13px  
		opacity 0

@-webkit-keyframes fadein
	0%
		bottom 0
		opacity 0
	50%
		opacity 1
	100%
		bottom 50px
		opacity 1

@-moz-keyframes fadein
	0%
		right -100%
	100%
		right 0%

@-ms-keyframes fadein
	0%
		right -100%
	100%
		right 0%

@-o-keyframes fadein
	0%
		right -100%
	100%
		right 0%


// Below Fold 
.container
	//width 20em
	position relative
 
.content
	h2 
		color blue
		margin-top 0
	h4
		color blue
		margin-top 0
		margin-bottom 20px
	.row 
		padding-bottom 40px
		margin-bottom 0px //20
		margin-left 0
		margin-right 0
		padding-left 0
		padding-right 0 
		&:first-child
			padding-top 20px
	p 
		font-size 16px
			

// EMAIL 

.email
	-moz-transition all 0.5s
	-o-transition all 0.5s
	-webkit-transition all 0.5s
	transition all 0.5s
	color #333
	
label
	display block
	position relative
	margin 0 0 10px 0
	-moz-transition all 0.5s
	-o-transition all 0.5s
	-webkit-transition all 0.5s
	transition all 0.5s
	textarea
		min-height 6em

label input, label textarea
	display block
	font-size 1em
	width 100%
	padding 0.5em 2.75em
	border none
	background #f9f9fa
	border-radius 0.2em
	-moz-transition all 0.5s
	-o-transition all 0.5s
	-webkit-transition all 0.5s
	transition all 0.5s


label input:focus, label textarea:focus
	outline none
	box-shadow 0 0 2em rgba(255,255,255,1)
	-moz-transition all 0.2s
	-o-transition all 0.2s
	-webkit-transition all 0.2s
	transition all 0.2s

input[type=radio]
		display none
		
.btn-group
	width 100%
	margin-bottom 15px
	input[type=radio]
		display none
	.mode 
		.btn
			width 25%
			&:active
				background-color white
				transition all .1s linear
.checked
	background-color blue
	box-shadow 0 -3px 0 rgba(22,71,114,0.3) inset
	transition all .1s linear
		
.btn
	color white
	//padding 8px 10px
	border 4px solid blue
	border-radius 4px
	margin 0 0 10px 0
	display block
	cursor pointer
	width 50%
	transition all .3s linear
	&:hover 
		color white
		background-color orange
		border 4px solid orange !important //clean 
		transition all .1s linear
	&:active
		box-shadow 0 -3px 0 rgba(22,71,114,0.3) inset
		
.form-wrap 
	text-align center
	form 
		max-width 350px
		display inline-block 

// Destination/Airport 
.airport-field input
	background url('http://widget.mozio.com/airport-marker.png') no-repeat 5px center white
	background-position-x 7px
.destination-field input
	background url('http://widget.mozio.com/location-marker.png') no-repeat 5px center white
	background-position-x 10px
#email
	&::-webkit-input-placeholder, &::-moz-placeholder 
		color black
		
// Date, Time 
.btn-group-date 
	position relative
	width 100%
	display inline-block
	text-align center
	.mode 
		width 49% //clean
		position relative
		display inline-block
		&:first-child
			margin-right 2%   
	.date input
		background url('http://widget.mozio.com/calendar-icon.png') no-repeat 6px center white
		background-position-x 10px  
	.time input
		background url('http://widget.mozio.com/time-icon.png') no-repeat 6px center white
		background-position-x 10px    

// Domestic or Int. Passengers
.btn-group-details 
	position relative
	width 100%
	display inline-block
	text-align left 
	.mode 
		float left
		&:first-child
			margin-right 2%
	.intDom
		width 40%
		min-width 150px
	.passengers
		width 10%
		min-width 50px
	.text
		color white
		margin-top 7px
		margin-left 2%
	select 
		width 100%
	label select
		background orange
		border 4px solid orange
		height 34px
		-webkit-appearance none
		padding 0 0 0px 7px

// Circles, Radio, One-way, RT
.btn-group-mode
	position relative
	width 100%
	display inline-block
	text-align center
	.mode 
		width 17%
		min-width 125px
		position relative
		display inline-block
		height 32px
		.mode-radio 
			height 30px
			width 30px
			border-radius 15px
			border 4px solid blue
			float left
			padding 0
			.mode-radio-text
				margin-left 40px

// Search
.btn-search
	color #333
	//padding 8px 10px
	border 4px solid green
	border-radius 4px
	margin 10px 0 10px 0
	display block
	cursor pointer
	width 150px
	background green
	-moz-transition all 0.1s
	-o-transition all 0.1s
	-webkit-transition all 0.1s
	transition all 0.1s
	float right
	padding 5px 0
	&:hover, &:focus
		color #333
		background-color #93FF00
		border 4px solid #93FF00 !important //clean 
		-moz-transition all 0.5s
		-o-transition all 0.5s
		-webkit-transition all 0.5s
		transition all 0.5s
	&:active 
		box-shadow 0 -3px 0 rgba(22,71,114,0.3) inset 
.press
	.row
		padding-bottom 0
	.logos 
		text-align center
		img 
			width 75%
			opacity .5
			margin-bottom 20px 
			
			
		

#map 
	background-size cover 
	height 450px
	.row
		padding-bottom 0 
	.col-md-5
		//background-color white !important
		height 410px
		padding-top 20px
		h4
			color orange
			margin-bottom 0
			border-radius radius
			margin-top 0

	.item-intro
		position relative
		display inline-block
		width 100%
		padding 10px 10px 7px
		margin-bottom 10px
		background-color #f9f9fa
		cursor pointer
		clear both
		border-radius radius
		h3
			color #656565
			font-size 19px
			font-weight bold 
			margin -5px 0 0 0
	.item
		opacity 1
		position relative
		display inline-block
		width 100%
		padding 10px 10px 7px
		margin-bottom 10px
		background-color #f9f9fa
		cursor pointer
		clear both
		border-radius radius
		-moz-transition all 0.1s
		-o-transition all 0.1s
		-webkit-transition all 0.1s
		transition all 0.1s 
		&:first-child
			.info
				background url('https://s3.amazonaws.com/mozio-provider-logo/supershuttlelogo')
				background-size 40px 40px
				padding 0 50px
				background-repeat no-repeat
		&:last-child
			.info 
				background none
				padding 0 
		&:hover
			background-color white
			box-shadow 0 0 1em rgba(255,255,255,1)
			-moz-transition all 0.1s
			-o-transition all 0.1s
			-webkit-transition all 0.1s
			transition all 0.1s 
		.info
			float left
			background url('https://s3.amazonaws.com/mozio-provider-logo/defaults/default_blackcar_provider1')
			background-size 26px 26px
			background-repeat no-repeat
			padding 0 35px
			h5 
				margin 0
				color blue
				font-size 14px
			p
				font-size 10px
		.price 
			display inline-block
			float right
			color blue
			font-size 12px
			b 
				color orange 

//info
.deets
	h4
		margin-bottom 10px
		
// Social media
.social-media
	h4
		margin-top 10px
		margin-bottom 10px
		font-weight bold
		font-size 23px
		line-height 1.3
		opacity .8
	.col-md-7
		padding-left 0
		color white
	.col-md-5
		margin-top 10px
	i 
		font-size 60px
		color orange
		cursor pointer 
		padding 45px 40px
		transition color .5s ease 
		&:hover 
			color blue
			transition color .5s ease 
	p 
		color #ccc
		font-size 18px
// Links at Bottom 
.links
	a 
		border-bottom 1px solid rgba(0,135,255, .7)
	.row
		padding-bottom 0
	h5 
		color blue
		font-weight bold 
	ul 
		padding-left 0
		list-style-type none
		li 
			color white
	.col-xs-9
		padding-left 0
		
.seo-footer
	background-color #DDD
	padding-top 40px
	color #A19F9F
	font-size 8px
	opacity .4
.footer
	padding-top 40px
	a  
		color #333
		opacity .7  
		&:hover 
			color blue
	ul 
		list-style-type none
		color #333


@media (min-width:768px)
	 .container 
			max-width 1060px//730px
			width 93.96226%
			
.container-narrow > hr
	margin 30px 0
	
.jumbotron
	text-align center
	background-color rgba(0,0,0,0)
	.btn
		font-size 21px
		padding 14px 24px

.marketing
	margin 40px 0
	p
		& + h4
			margin-top 28px

@media screen and (device-aspect-ratio: 40/71)
	#header 
		padding-top 20px 
		.header
			margin-bottom 0
		.hero
			padding-top 0
			.copy
				margin-bottom 10px
		h2
			font-size 20px
			margin 0
		h3 
			font-size 14px 
			margin-top 5px
	.logo
		margin-bottom 0
		width 75px
	.btn-group 
		margin-bottom 0
	.btn-group-mode 
			height 23px
			margin-top -3px
			margin-left 20px 
	.btn-group-mode .mode .mode-radio
		width 20px
		height 20px
		border-radius 10px 
		.mode-radio-text
			margin-left 25px
			margin-top -3px  
	.arrow
		display none

@media all and (max-width:768px)
	.header,
	.marketing,
	.footer 
		padding-left 0
		padding-right 0
	.header
		margin-bottom 30px
	.jumbotron
		border-bottom 0

