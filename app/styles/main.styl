font = "ProximaNova", Arial, Sans-Serif
font-color = #333
blue = #0087ff
orange = #f99e02

body
  padding-top 0px
  padding-bottom 20px

h1 
	-webkit-font-smoothing antialiased
.header,
.marketing,
.footer
  padding-left 15px
  padding-right 15px

.header
  border-bottom 1px solid #e5e5e5
  margin-bottom 30px
  h3
    margin-top 0
    margin-bottom 0
    line-height 40px
    padding-bottom 19px

.footer
  padding-top 19px
  color #777
  border-top 1px solid #e5e5e5

// Navbar
.logo
	width 120px
	padding-bottom 20px
	
// Header/Above Fold
#header 
	background-color blue
	z-index -99
	padding-top 20px
	h1 
		color white
		font-size 2em
	h3
		color white
		
@media (min-width:768px)
   .container 
    	max-width 1060px//730px
    	width 93.96226%
    	
.container-narrow > hr
  margin 30px 0
  
.jumbotron
  text-align center
  background-color rgba(0,0,0,0)
  .btn
    font-size 21px
    padding 14px 24px

.marketing
  margin 40px 0
  p
    & + h4
      margin-top 28px

@media screen and (min-width:768px)
  .header,
  .marketing,
  .footer 
    padding-left 0
    padding-right 0
  .header
  	margin-bottom 30px
  .jumbotron
  	border-bottom 0

